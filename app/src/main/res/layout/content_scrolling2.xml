<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TrangChinhFragment.FragmentTaikhoan"
    tools:showIn="@layout/fragment_fragment_taikhoan">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/capnhatthongtin"
            android:textStyle="bold"
            android:drawableLeft="@drawable/persion1"
            android:layout_marginLeft="5dp"
            android:text="Cập thông tin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/Chvanchuyenr"
            android:drawableLeft="@drawable/chovc"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Chờ vận chuyển"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="#000"
                android:textSize="20dp"
                android:drawableLeft="@drawable/chovanchuyen"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Chờ giao hàng"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="#000"
                android:textSize="20dp"
                android:drawableLeft="@drawable/danhgia1"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Đánh giá của tôi"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/donhang"
                android:layout_marginLeft="5dp"
                android:text="Đơn hàng đã hủy"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Chính sách"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Trợ giúp"/>

            <Button
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Đăng xuất"
                android:background="@color/backround"
                android:id="@+id/dangxuat"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.core.widget.NestedScrollView>