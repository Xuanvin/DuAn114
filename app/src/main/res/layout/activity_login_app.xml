<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserName.LoginApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/backround"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:src="@drawable/sunbee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:background="@drawable/bo"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_email" />

                    <EditText
                        android:id="@+id/edtEmailLogin"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/boderaa"
                        android:ems="10"
                        android:hint="Nhập Email"

                        android:inputType="textPersonName" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:background="@drawable/bo"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_lock" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/boderaa"
                        android:ems="10"
                        android:id="@+id/edtPasswordLogin"
                        android:hint="Nhập Password"
                        android:inputType="textPassword" />
                </LinearLayout>
            </LinearLayout>


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="#FFF"
                android:text="Remember Login"
                android:textColor="#FFF" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Đăng nhập"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:background="@drawable/dangnhap"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="---------------------OR---------------------"
                android:textColor="#7A7676" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Đăng ký"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#FFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/btnRegister"
                    android:layout_height="50dp"
                    android:background="@drawable/ecl"
                    android:src="@drawable/ic_chevron"/>
            </LinearLayout>




        </LinearLayout>
    </LinearLayout>
</LinearLayout>