<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SwipeRefreshLayouthangcongnghe"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.HangCongNghe"
    android:background="#0d47a1"
    tools:showIn="@layout/activity_hang_cong_nghe">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgsapsan"
            android:src="@drawable/ok"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sập sàn công nghệ"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#fafafa"
            android:fontFamily="@font/a"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listviewHangCongNghe"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>