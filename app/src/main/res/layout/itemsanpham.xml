<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgsanpham"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="150dp"
                android:src="@drawable/den"
                android:transitionName="ImgTransition" />

            <TextView
                android:id="@+id/tensanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="Banking"
                android:textColor="#176CEE"
                android:textStyle="bold"
                android:transitionName="NameTransition" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/lightgray" />

            <TextView
                android:id="@+id/gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8.050.000đ"
                android:textColor="#F00A0A"
                android:textSize="8dp"
                android:textStyle="bold"
                android:transitionName="GiaTransition" />

            <TextView
                android:id="@+id/giamgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8.550.000đ"
                android:textSize="7dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5" />

                <TextView
                    android:id="@+id/binhluan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( 10  )"
                    android:textColor="#F50606" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" /5"
                    android:textColor="#F50606" />

            </LinearLayout>

            <TextView
                android:id="@+id/diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Hà Nội"
                android:textColor="@android:color/darker_gray"
                android:textSize="7dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>